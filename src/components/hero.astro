---
import { Picture } from "astro:assets";
import heroImage from "@/assets/hero.png";
import Link from "@/components/ui/link.astro";
import { Icon } from "astro-icon/components";
---

<main
  class="grid lg:grid-cols-2 place-items-center pt-16 pb-8 md:pt-12 md:pb-24">
  <div class="py-6 md:order-1 hidden md:block">
    <Picture
      src={heroImage}
      alt="Astronaut in the air"
      widths={[200, 400, 600]}
      sizes="(max-width: 800px) 100vw, 620px"
      loading="eager"
      format="avif"
    />
  </div>
  <div>
    <h1
      class="text-5xl lg:text-6xl xl:text-7xl font-bold lg:tracking-tight xl:tracking-tighter">
      Reliable Home Renovations in Morris, Essex, and Union County, NJ
    </h1>
    <p class="text-lg mt-4 text-slate-600 max-w-xl">
      Family-run contractor delivering quality renovations, carpentry, painting, and bathroomsâ€”trusted by homeowners and local businesses.
    </p>
    <div class="mt-6 flex flex-col sm:flex-row gap-3">
      <Link
        href="tel:+1-609-598-6392"
        class="flex gap-1 items-center justify-center"
        rel="noopener">
        <Icon class="text-white w-5 h-5" name="bx:bxs-phone" />
        Call (609) 598-6392
      </Link>
      <Link
        size="lg"
        style="outline"
        rel="noopener"
        href="/contact"
        class="flex gap-1 items-center justify-center">
        <Icon class="text-brand w-4 h-4" name="bx:bxs-envelope" />
        Get a Free Quote
      </Link>
    </div>
    <ul class="mt-4 flex flex-wrap gap-x-6 gap-y-2 text-slate-500 text-sm">
      <li class="flex items-center gap-1"><Icon name="bx:bx-check" class="w-4 h-4" /> Licensed & insured</li>
      <li class="flex items-center gap-1"><Icon name="bx:bx-check" class="w-4 h-4" /> Free estimates</li>
      <li class="flex items-center gap-1"><Icon name="bx:bx-check" class="w-4 h-4" /> On time, on budget</li>
    </ul>
  </div>
</main>
