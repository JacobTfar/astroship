---
import { Icon } from "astro-icon/components";
import manualReviews from "@/content/reviews/google.json";

const apiKey = process.env.GOOGLE_MAPS_API_KEY;
const placeId = process.env.GOOGLE_PLACE_ID;
// Using process.env for consistency; PUBLIC_ prefix can be exposed if configured
// If no env is provided, fall back to the GBP reviews deep link shared by the client
const reviewsUrl = process.env.PUBLIC_GOOGLE_REVIEWS_URL ||
  "https://www.google.com/search?q=Jason+Fallas+Home+Improvements&stick=H4sIAAAAAAAA_-NgU1I1qLCwTDZOsbQwSDQyNDO0MDe0MqhISbY0Mk00NEg2NbNMSTUzWsQq55VYnJ-n4JaYk5NYrOCRn5uq4JlbUJRflpqbmldSDAA6BSHCSgAAAA&hl=en&mat=CebcOEXVHD5LElcBTVDHnj-3K7UZSxXmCpfBnLb0zNr-g7W4Ml99q5ski9cNSHC41nlaz8Kox_t_pJW6_dQPba70i0GxPOttPeIIrWfJJQNSZ1t52WKuGWXVuIF4i5xtpSc&authuser=1#mpd=~5421802703715622118/customers/reviews";

let placeName: string | undefined;
let rating: number | undefined;
let userRatingsTotal: number | undefined;
let reviews: Array<any> = [];

if (apiKey && placeId) {
  try {
    const params = new URLSearchParams({
      place_id: placeId,
      key: apiKey,
      fields: "name,rating,user_ratings_total,reviews",
      reviews_no_translations: "true",
      reviews_sort: "newest",
    });
    const res = await fetch(
      `https://maps.googleapis.com/maps/api/place/details/json?${params.toString()}`
    );
    const data = await res.json();
    if (data.status === "OK" && data.result) {
      placeName = data.result.name;
      rating = data.result.rating;
      userRatingsTotal = data.result.user_ratings_total;
      reviews = (data.result.reviews || []).slice(0, 6);
    }
  } catch (e) {
    // swallow error; fall back to CTA
  }
}

// Manual fallback: if API yielded nothing, use curated reviews JSON if available
if (reviews.length === 0 && Array.isArray(manualReviews) && manualReviews.length > 0) {
  reviews = manualReviews;
  // If rating/count not provided via API, derive from manual set
  const ratings = manualReviews.map((r: any) => Number(r.rating)).filter((n: number) => !Number.isNaN(n));
  if (ratings.length > 0) {
    rating = ratings.reduce((a: number, b: number) => a + b, 0) / ratings.length;
    userRatingsTotal = ratings.length;
  }
}

// Build structured data for reviews when we have any signal
const hasAggregate = typeof rating === "number" && typeof userRatingsTotal === "number";
const hasReviews = Array.isArray(reviews) && reviews.length > 0;
let reviewsLd: any | undefined = undefined;
if (hasAggregate || hasReviews) {
  const businessId = new URL("#localbusiness", Astro.site ?? "https://jfcontracting.biz").toString();
  const businessUrl = new URL("/", Astro.site ?? "https://jfcontracting.biz").toString();
  reviewsLd = {
    "@context": "https://schema.org",
    "@type": "LocalBusiness",
    "@id": businessId,
    name: "JF Contracting",
    url: businessUrl,
    ...(hasAggregate
      ? {
          aggregateRating: {
            "@type": "AggregateRating",
            ratingValue: Number(rating!.toFixed(1)),
            reviewCount: userRatingsTotal,
          },
        }
      : {}),
    ...(hasReviews
      ? {
          review: reviews.slice(0, 6).map((r: any) => ({
            "@type": "Review",
            reviewBody: r.text,
            author: { "@type": "Person", name: r.author_name || "Google user" },
            reviewRating: { "@type": "Rating", ratingValue: r.rating },
          })),
        }
      : {}),
  };
}
---

<section class="mt-20">
  <h2 class="text-3xl md:text-4xl font-bold tracking-tight">Google Reviews</h2>
  {rating && userRatingsTotal ? (
    <div class="mt-2 flex items-center gap-3 text-slate-600">
      <div class="flex items-center gap-1">
        {
          Array.from({ length: 5 }).map((_, i) => (
            <Icon name="bx:bxs-star" class={i < Math.round(rating!) ? "text-amber-500 w-5 h-5" : "text-slate-300 w-5 h-5"} />
          ))
        }
      </div>
      <span class="text-sm">{rating?.toFixed(1)} ({userRatingsTotal} reviews)</span>
    </div>
  ) : null}

  {reviews.length > 0 ? (
    <ul class="grid md:grid-cols-3 gap-6 mt-6">
      {reviews.map((r) => (
        <li class="border border-slate-200 rounded-md p-5 bg-white">
          <div class="flex items-center gap-2">
            <div class="flex items-center gap-1">
              {
                Array.from({ length: 5 }).map((_, i) => (
                  <Icon name="bx:bxs-star" class={i < Math.round(r.rating) ? "text-amber-500 w-4 h-4" : "text-slate-300 w-4 h-4"} />
                ))
              }
            </div>
            <span class="text-sm text-slate-500">{r.relative_time_description}</span>
          </div>
          <p class="mt-3 text-slate-700 line-clamp-6">{r.text}</p>
          <div class="mt-3 text-sm text-slate-500">— {r.author_name}</div>
        </li>
      ))}
    </ul>
  ) : (
    <div class="mt-4">
      <p class="text-slate-600">Read our latest reviews on Google.</p>
      {reviewsUrl ? (
        <a href={reviewsUrl} target="_blank" rel="noopener" class="inline-block mt-2 text-brand font-medium">See Google reviews →</a>
      ) : null}
    </div>
  )}
</section>

{reviewsLd ? (
  <script type="application/ld+json">{JSON.stringify(reviewsLd)}</script>
) : null}
