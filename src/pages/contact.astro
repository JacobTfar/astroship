---
import Contactform from "@/components/contactform.astro";
import Container from "@/components/container.astro";
import Sectionhead from "@/components/sectionhead.astro";
import Layout from "@/layouts/Layout.astro";
import { Icon } from "astro-icon/components";
---

<Layout title="Contact">
  <Container>
    <Sectionhead>
      <Fragment slot="title">Get a Free Quote</Fragment>
      <Fragment slot="desc">Questions? We're here to help.</Fragment>
    </Sectionhead>

    <div class="grid md:grid-cols-2 gap-10 mx-auto max-w-4xl mt-16">
      <div>
        <h2 class="font-medium text-2xl text-gray-800">Jason Fallas Contracting</h2>
        <p class="text-lg leading-relaxed text-slate-500 mt-3">
          Call for fastest response, or fill out the form and we'll get back to you within one business day.
        </p>
        <div class="mt-5">
          <div class="flex items-center mt-2 space-x-2 text-gray-600">
            <Icon class="text-gray-400 w-4 h-4" name="uil:phone" /><a
              href="tel:+1-609-598-6392" class="font-semibold">(609) 598-6392</a
            >
          </div>
          <div class="flex items-center mt-2 space-x-2 text-gray-600">
            <Icon class="text-gray-400 w-4 h-4" name="uil:envelope" /><a
              href="mailto:info@jfcontracting.biz"
              >info@jfcontracting.biz</a
            >
          </div>
          <div class="flex items-center mt-2 space-x-2 text-gray-600">
            <Icon class="text-gray-400 w-4 h-4" name="uil:map-marker" />
            <span>Summit / Short Hills / Mendham • Union / Springfield / Chatham • Blairstown & Warren County</span>
          </div>
          <div class="mt-4 text-sm text-slate-500">
            <p><strong>Hours:</strong> Mon–Fri 8am–6pm, Sat 9am–3pm</p>
          </div>
        </div>
      </div>
      <div>
        <Contactform />
      </div>
    </div>
  </Container>
</Layout>
